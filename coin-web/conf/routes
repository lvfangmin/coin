# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

GET     /login                      controllers.Login.index

POST    /authenticate               controllers.Login.authenticate

GET     /rules/templates            controllers.Rule.templates

GET     /rules/clone/:id            controllers.Rule.template(id: Int)

GET     /rules/:id                  controllers.Rule.index(id: Int)

POST    /save/:id                   controllers.Rule.save(id: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
