# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

GET     /loginsimple                controllers.Login.index

GET     /subscriptions              controllers.Application.subscriptions

GET     /auth                       controllers.Login.authenticate

GET     /dashboard                  controllers.Dashboard.index

GET     /rule/:rule                 controllers.Rule.index(rule: Int)

GET     /rulelist                   controllers.Rule.list

GET     /ruleadd/:rule              controllers.Rule.add(rule: Int)

GET     /save                       controllers.Rule.save

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET     /race controllers.Race.index()
